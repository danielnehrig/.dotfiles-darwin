# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# User Settings
source ~/.dotfiles-darwin/.zsh/export.zsh
source ~/.dotfiles-darwin/.zsh/settings.zsh
source ~/.dotfiles-darwin/.zsh/function.zsh
source ~/.dotfiles-darwin/.zsh/alias.zsh
source ~/.dotfiles-darwin/.zsh/github.zsh
source ~/.dotfiles-darwin/.zsh/tokens.zsh

export NVM_DIR="$HOME/.nvm"
[ -s "/usr/local/opt/nvm/nvm.sh"  ] && . "/usr/local/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/usr/local/opt/nvm/etc/bash_completion.d/nvm"  ] && . "/usr/local/opt/nvm/etc/bash_completion.d/nvm"  # This loads nvm bash_completion

# Nodenv init
# eval "$(nodenv init -)"

plugins=(git tmux osx zsh-syntax-highlighting yarn npm docker fzf fzf-docker fzf-tab zsh-autosuggestions ssh-agent github)
export FZF_DEFAULT_COMMAND='find -L . -type f ! -path "*/\.git/*" ! -path "*/\node_modules/*" ! -path "*/\coverage/*" ! -path "*/\npm-packages-offline-cache/*"'
export FZF_CTRL_T_COMMAND='find -L . -type f ! -path "*/\.git/*" ! -path "*/\node_modules/*" ! -path "*/\coverage/*" ! -path "*/\npm-packages-offline-cache/*"'
# export FZF_DEFAULT_OPTS="-i --preview 'bat --style=numbers --color=always {}'"
export FZF_DEFAULT_OPTS="-i"

source ~/.dotfiles-darwin/oh-my-zsh/oh-my-zsh.sh
source ~/.dotfiles-darwin/.zsh/forgit.zsh
[[ ! -f ~/.dotfiles-darwin/.zsh/.p10k.zsh ]] || source ~/.dotfiles-darwin/.zsh/.p10k.zsh

source <(kubectl completion zsh)
kubectl config rename-context gke-production rtl-production
alias kcc="kubectl config use-context"
